#!/bin/bash
# Copyright 2025 ZapFS Authors
# SPDX-License-Identifier: Apache-2.0

# Pre-commit hook for ZapFS
# Install with: make hooks-install

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get staged Go files (excluding deleted files and vendor)
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' | grep -v '^vendor/' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    exit 0
fi

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Track if any check fails
FAILED=0

# -----------------------------------------------------------------------------
# Check 1: gofmt
# -----------------------------------------------------------------------------
echo -n "Checking gofmt... "
UNFORMATTED=$(echo "$STAGED_GO_FILES" | xargs gofmt -l 2>/dev/null || true)
if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}FAILED${NC}"
    echo "The following files need formatting:"
    echo "$UNFORMATTED" | sed 's/^/  /'
    echo ""
    echo "Run 'gofmt -w <file>' or 'make fmt' to fix."
    FAILED=1
else
    echo -e "${GREEN}OK${NC}"
fi

# -----------------------------------------------------------------------------
# Check 2: go vet
# -----------------------------------------------------------------------------
echo -n "Running go vet... "
# Get unique packages from staged files
PACKAGES=$(echo "$STAGED_GO_FILES" | xargs -I{} dirname {} | sort -u | sed 's|^|./|')
# Use -tags enterprise to include enterprise packages with build constraints
if ! echo "$PACKAGES" | xargs go vet -tags enterprise 2>/dev/null; then
    echo -e "${RED}FAILED${NC}"
    FAILED=1
else
    echo -e "${GREEN}OK${NC}"
fi

# -----------------------------------------------------------------------------
# Check 3: staticcheck (if installed)
# -----------------------------------------------------------------------------
if command -v staticcheck &> /dev/null; then
    echo -n "Running staticcheck... "
    # Run staticcheck with enterprise tags, excluding:
    # - Proto generated files (proto/*_pb/)
    # - Build constraint messages (lines starting with "-:")
    STATICCHECK_OUT=$(echo "$PACKAGES" | xargs staticcheck -tags enterprise 2>&1 | grep -v -E '^proto/.*_pb/|^-:' || true)
    if [ -n "$STATICCHECK_OUT" ]; then
        echo -e "${RED}FAILED${NC}"
        echo "$STATICCHECK_OUT"
        FAILED=1
    else
        echo -e "${GREEN}OK${NC}"
    fi
else
    echo -e "${YELLOW}Skipping staticcheck (not installed)${NC}"
fi

# -----------------------------------------------------------------------------
# Check 4: Build check (quick compile)
# -----------------------------------------------------------------------------
echo -n "Checking build... "
if ! go build -tags enterprise ./... 2>/dev/null; then
    echo -e "${RED}FAILED${NC}"
    echo "Build failed. Run 'make build' to see errors."
    FAILED=1
else
    echo -e "${GREEN}OK${NC}"
fi

# -----------------------------------------------------------------------------
# Result
# -----------------------------------------------------------------------------
echo ""
if [ $FAILED -ne 0 ]; then
    echo -e "${RED}Pre-commit checks failed. Please fix the issues above.${NC}"
    echo "To skip this check (not recommended): git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
